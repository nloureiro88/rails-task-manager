<h2>Update Task: <%= @task.title %></h2>

<%= form_for @task do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :details %>
    <%= form.text_field :details, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.check_box :completed %>
    <%= form.label :completed %>
  </div>
  <%= form.submit %>
<% end %>
